public String reverseWordsInASentence(String sentence){
        if (sentence == null) {
        return null;
    } else if (sentence == '') {
        return '';
    }


    sentence.reverse();
    List <String> lista = sentence.split(' ');
    List <String> listaReversed = List<String>();
    for (Integer i = 0; i < lista.size(); i++){
        i.reverse();
        listaReversed.add(i);
    }
    join(listaReversed,' ')
}